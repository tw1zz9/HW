#include <stdio.h>

void Enter_Array();
int Len_Array();
void Palindrom_Check();

int main()
{	
	char array[100] = { 0 };
	Enter_Array(array);
	int len = Len_Array(array);
	Palindrom_Check(array, len);
	return 0;
}

void Enter_Array(char array[])
{
	printf("Vvod stroki: ");
	fgets(array, 100, stdin);
	return array;
}

int Len_Array(char array[])
{
	int i = 0, len = 0;
	for (i; i < 100; i++)
	{
		if (array[i] == 0)
		{
			break;
		}
		else
		{
			len++;
		}
	}
	return len-1;
}

void Palindrom_Check(char array[], int len)
{
	char second_array[100] = { 0 };
	int i = len - 1;
	int j = 0, ind = 0, check = 0;
	
	for (i; i >= 0; i = i - 1)
	{
		second_array[j] = array[i];
		j++;
	}

	for (ind; ind < len; ind++)
	{
		if (second_array[ind] != array[ind])
		{
			printf("Stroka ne palindrom\n");
			check++;
			break;
		}
	}
	if (check == 0)
	{
		printf("Stroka palindrom\n");
	}
	return 0;
}
